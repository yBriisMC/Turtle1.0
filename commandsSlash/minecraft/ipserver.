  let porta = interaction.options.getString("porta")
  let ip2 = await db.get(`ipserver${guild.id}`) || "ip nÃ£o encontrado";
  let porta2 = await db.get(`portaserver${guild.id}`) || "porta nÃ£o encontrado";
      if (ip2 === 'ip nÃ£o encontrado' || porta2 === 'porta nÃ£o encontrado') {

  return interaction.reply({ content: 'Algumas configuraÃ§Ãµes nÃ£o foram definidas. Por favor, define usando o comando `/setserver`.', ephemeral: true});
      }
