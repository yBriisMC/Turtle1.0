const Discord = require("discord.js")
const { QuickDB } = require("quick.db") 
const db = new QuickDB()

module.exports = {
  name: "ip", 
  description: "[ ğŸ§± Minecraft ] Use para ver ip do servidor de Minecraft.", 
  type: Discord.ApplicationCommandType.ChatInput,
 options: [
        {
            name: "ip",
